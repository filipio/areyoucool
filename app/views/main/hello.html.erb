<div class="row justify-content-md-center text-center mt-3">
  <div class="col-md-6">
    <%= form_with url: root_url do |form| %>

      <%= form.label 'Enter your name', class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>

      <%= form.submit :Check, class: 'btn btn-lg btn-block btn-primary mt-2' %>
      <% if @result %>
        <h1 class="mt-3"><%= @result %></h1>
      <% end %>

    <% end %>
  </div>
</div>
